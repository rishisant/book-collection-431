<%= stylesheet_link_tag 'books' %>

<div class="books_header">
  <h1>Book List</h1>
</div>

<div class="button_main_bar">
    <div class="button_nav">
        <%= link_to 'Add New Book', new_book_path %>
    </div>
</div>

<div class="books_list">
    <table>
        <thead>
        <tr>
            <th>Title</th>
            <th>Author</th>
            <th>Price</th>
            <th>Published</th>
            <th></th>
            <th>Actions</th>
            <th colspan="3"></th>
        </tr>
        </thead>

    
        <tbody>
        <% @books.each do |book| %>
            <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.price %></td>
            <td><%= book.published_date.strftime("%Y-%m-%d") %></td>
            <td><%= link_to 'Show', book %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= button_to "Delete", book, method: :delete, data: { turbo_confirm: 'Are you absolutely sure about deleting this precious book?' } %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>